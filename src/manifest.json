{
	"name": "Majordomo",
	"version": "1.0.0",
	"description": "Execute scripts on any page",
	"author": "catc",
	"homepage_url": "https://github.com/catc/majordomo",
	"permissions": [
		"tabs",
		"storage",
		"activeTab"
	],
	"options_page": "options.html",
	"background": {
		"scripts": [
			"background.bundle.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "Majordomo"
	},
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"manifest_version": 2,
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}